<% layout('layout/boilerplate') %>

<div class="container justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img  src="https://media.kare11.com/assets/KARE/images/437173820/437173820_750x422.png" class="card-img-top" alt="">
               <div class="card-body">
                <h5 class="card-title">Login</h5>
                <form action="/login" method='POST' class="validate-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" autofocus required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
            
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-outline-dark w-100">Login!</button>
                </form>
               </div>
            </div>
        </div>
    </div>
</div>
    